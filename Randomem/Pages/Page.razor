@page "/"
@inherits PageBase

<div class="page">
    <div class="meme">
        @if (memeUrl == "error")
        {
            ReloadComponent();
        }
        else
        {

            <img src=@memeUrl />
        }

    </div>
    <div class="panel">
        <div class="ad">
        </div>

        <div class="draw">
            <i class="fas fa-dice fa-10x" @onclick="GetUrl"></i>
        </div>
    </div>
</div>

@{
    while (memeQueue.Count < 2)
    {
        memeQueue.Enqueue(MemeLib.MemeUrl.DrawUrl());
    }
}

@code{
    @inject NavigationManager NavigationManager;
    private void ReloadComponent()
    {
        NavigationManager.NavigateTo("/", true);
    }
}